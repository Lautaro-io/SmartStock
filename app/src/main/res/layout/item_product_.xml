<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    app:cardCornerRadius="16dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/bg_card">


        <ImageView
            android:id="@+id/ivProductPhoto"
            android:layout_width="80dp"
            android:layout_height="120dp"
            tools:src="@drawable/svg_add_ic"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvNameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre :"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/leaguespartanbold"/>
            <TextView
                android:id="@+id/tvCountProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad : "
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/leaguespartanbold"/>
            <TextView
                android:id="@+id/tvSucName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sucursal : "
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/leaguespartanbold"/>
            <TextView
                android:id="@+id/tvExpireDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de vencimiento : "
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/leaguespartanbold"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:backgroundTint="@color/delete_btn"
        android:text="@string/delete_btn"
        android:padding="1dp"
        android:layout_margin="15dp"/>

</androidx.cardview.widget.CardView>